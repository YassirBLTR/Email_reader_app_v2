# Email Reader App Configuration

# Email folder path - Update this to point to your .msg files directory
EMAIL_FOLDER_PATH=/path/to/your/email/folder

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# File download limits (in bytes)
MAX_DOWNLOAD_SIZE=104857600  # 100MB

# Pagination settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Authentication (Role-based)
# Admin account
AUTH_USERNAME=admin
AUTH_PASSWORD=admin123
# Normal user account
AUTH_USER_USERNAME=user
AUTH_USER_PASSWORD=user123
# Optional: Use bcrypt hashes instead of plaintext passwords above
# AUTH_PASSWORD_BCRYPT=$2b$12$examplehashforadmin...
# AUTH_USER_PASSWORD_BCRYPT=$2b$12$examplehashforuser...

# JWT settings
JWT_SECRET_KEY=change_this_secret
JWT_EXPIRE_MINUTES=60

# PMTA relay domains FILE (must exist or be creatable; parent dir must be writable)
# Example (Linux): /etc/pmta/relaydomains-c
# Example (Windows dev): C:\\etc\\pmta\\relaydomains-c
# If DEBUG=true and the parent directory doesn't exist, it will be created automatically.
RELAYDOMAINS_PATH=/etc/pmta/relaydomains-c
