# Email Reader App Configuration

# Email folder path - Update this to point to your .msg files directory
# For local development/testing (create a sample folder)
EMAIL_FOLDER_PATH=/var/spool/mail/inbound
# For production server, this should be the actual path like:
# EMAIL_FOLDER_PATH=/var/emails
# EMAIL_FOLDER_PATH=/home/user/email_files
RELAYDOMAINS_PATH=C:\etc\pmta\relaydomains-c
# Server configuration
HOST=0.0.0.0
PORT=8080
DEBUG=False

# File download limits (in bytes) - 100MB
MAX_DOWNLOAD_SIZE=104857600

# Pagination settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
